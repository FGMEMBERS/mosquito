<PropertyList>
  <!-- set prop for the manual "bookmark" arrow on the remote compas -->
  <instrumentation>
    <magnetic-compass>
      <bookmark-heading-deg type="double">43.0</bookmark-heading-deg>
    </magnetic-compass>
  </instrumentation>

 <consumables>
  <fuel>
    <on-reserve type="int">0</on-reserve>
    <tank n="0">
      <name>Center left</name>
      <selected type="bool">false</selected>
    </tank>
    <tank n="1">
      <name>Center right</name>
      <selected type="bool">false</selected>
    </tank>
    <tank n="2">
      <name>Inner Wing left</name>
      <selected type="bool">false</selected>
    </tank>
    <tank n="3">
      <name>Inner wing right</name>
      <selected type="bool">false</selected>
    </tank>
    <tank n="4">
      <name>Outer wing left</name>
      <selected type="bool">false</selected>
    </tank>
    <tank n="5">
      <name>Outer wing right</name>
      <selected type="bool">false</selected>
    </tank>
    <stbdcock type="int">0</stbdcock>
    <prtcock type="int">0</prtcock>
  </fuel>
 </consumables>

  <controls>
    <armament>
      <station>
        <loaded type="bool">true</loaded>
      </station>
    </armament>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
        <boost type="double">0.45</boost> <!--high: 0.6 -->
	<blower type="int">0</blower>
        <primer-pressed type="bool">0.0</primer-pressed>
	<throttle-c type="float">0</throttle-c>
        <mixture0 type="float">0</mixture0>
      </engine>
      <engine n="1">
        <magnetos>0</magnetos>
        <boost type="double">0.45</boost>
	<blower type="int">0</blower>
        <primer-pressed type="bool">0.0</primer-pressed>
	<throttle-c type="float">0</throttle-c>
        <mixture0 type="float">0</mixture0>
      </engine>
    </engines>
    <gear>
      <brake-parking type="bool">true</brake-parking>
      <tailwheel-lock>true</tailwheel-lock>
      <rdoor-pos-norm type="float">0.0</rdoor-pos-norm>
      <cdoor-pos-norm type="float">0.0</cdoor-pos-norm>
      <fdoor-pos-norm type="float">0.0</fdoor-pos-norm>
     <gear n="0">
        <gear-down type="bool">true</gear-down>
      </gear>
      <gear n="1">
        <gear-down type="bool">true</gear-down>
      </gear>
      <gear n="2">
        <gear-down type="bool">true</gear-down>
      </gear>
      <gear n="3">
        <gear-down type="bool">false</gear-down>
      </gear>
    </gear>
  </controls>

 <engines>
   <engine n="0">
     <rpm type="double">0</rpm>
     <cylinder-temp-degc type="float">15</cylinder-temp-degc>
     <coolant-temp-degc type="float">15.0</coolant-temp-degc>
     <crankloop type="float">0</crankloop>
     <oiltempc type = "float">15.0</oiltempc>
     <oil-visc type = "float">0.1</oil-visc>
     <oil-press type = "float">0.0</oil-press>
     <fuel-press type ="float">0.0</fuel-press>
     <rev-strain type="int">0</rev-strain>
     <overrev type="int">0</overrev>
     <overheat type="int">0</overheat>
     <primed type="float">1</primed>
     <startup_smoke type="bool">false</startup_smoke>
     <boost-strain type="float">0</boost-strain>
     <carburator-entry-temp-degc type="float">15</carburator-entry-temp-degc>
   </engine>
   <engine n="1">
     <rpm type="double">0</rpm>
     <cylinder-temp-degc type="float">15</cylinder-temp-degc>
     <coolant-temp-degc type="float">15.0</coolant-temp-degc>
     <crankloop type="float">0</crankloop>
     <oiltempc type = "float">15.0</oiltempc>
     <oil-visc type = "float">0.1</oil-visc>
     <oil-press type = "float">0.0</oil-press>
     <fuel-press type ="float">0.0</fuel-press>
     <rev-strain type="int">0</rev-strain>
     <overrev type="int">0</overrev>
     <overheat type="int">0</overheat>
     <primed type="float">1</primed>
     <startup_smoke type="bool">false</startup_smoke>
     <boost-strain type="float">0</boost-strain>
     <carburator-entry-temp-degc type="float">15</carburator-entry-temp-degc>
   </engine>
 </engines>



  <input>
    <keyboard>
      <key n="12"> 
        <name>Ctrl+L</name>
        <desc>Toggle Tailwheel Lock.</desc>
        <binding> 
          <command>property-toggle</command>
          <property>controls/gear/tailwheel-lock</property>
        </binding>
      </key>
      <key n="68"> 
        <name>D</name>
        <desc>Toggle Radiator Shutter</desc>
        <binding>
          <command>nasal</command>
          <script>mosquito.toggle_cowlflaps()</script>
        </binding>
      </key>
      <key n="70">
        <name>F</name>
        <desc>Toggle Front-Door</desc>
        <binding n="0">
          <command>nasal</command>
          <script>mosquito.door.toggle();</script>
        </binding>
      </key>
      <key n="113"> 
        <name>q</name>
        <desc>Toggle Master Arm on</desc>
        <binding> 
          <command>property-adjust</command>
          <property>/controls/armament/master-arm</property>
          <step type="double">1</step>
          <min type="double">0</min>
          <max type="double">1</max>
        </binding>
      </key>
      <key n="81"> 
        <name>Q</name>
        <desc>Toggle Master Arm off</desc>
        <binding> 
          <command>property-adjust</command>
          <property>/controls/armament/master-arm</property>
          <step type="double">-1</step>
          <min type="double">0</min>
          <max type="double">1</max>
        </binding>
      </key>  
      <key n="101">
        <name>e</name>
        <desc>Fire machine guns</desc>
        <binding>
          <command>property-toggle</command>
          <property>controls/armament/trigger</property>
        </binding>
        <mod-up>
          <binding>
            <command>property-toggle</command>
            <property>controls/armament/trigger</property>
          </binding>
        </mod-up>
      </key>
    </keyboard>
  </input>

  <nasal>
    <weapons>
      <file>Nasal/weapons.nas</file>
    </weapons>
    <mosquito>
      <file>Nasal/mosquito.nas</file>
    </mosquito>
    <hitcheck>
      <file>Nasal/hitcheck.nas</file>
    </hitcheck>
    <failure>
      <file>Nasal/failure.nas</file>
    </failure>
    <merlin0>
      <file>Aircraft/mosquito/Nasal/merlin64.nas</file>
    </merlin0>
    <merlin1>
      <file>Aircraft/mosquito/Nasal/merlin64b.nas</file>
    </merlin1>
  </nasal>

  <sim>
    <aircraft-version>0.2</aircraft-version>
    <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>
    <armament include="Dialogs/armament.xml"/>
    <author>Detlef Faber, Ludovic Brenta</author>

    <autopilot>
      <config>
        <min-climb-speed-kt type="float">70.0</min-climb-speed-kt>
        <best-climb-speed-kt type="float">75.0</best-climb-speed-kt>
        <target-climb-rate-fpm type="float">500.0</target-climb-rate-fpm>
        <target-descent-rate-fpm type="float">1000.0</target-descent-rate-fpm>
        <elevator-adj-factor type="float">4000.0</elevator-adj-factor>
        <integral-contribution type="float">0.01</integral-contribution>
        <zero-pitch-throttle type="float">0.45</zero-pitch-throttle>
        <zero-pitch-trim-full-throttle type="float">0.14</zero-pitch-trim-full-throttle>
      </config>
    </autopilot>

  <failure-manager>
    <controls-failure-drag type="double">1.0</controls-failure-drag>
    <controls-failure-roll type="double">0.7</controls-failure-roll>
    <engines>
      <engine n="0">
        <propstrike type="bool">false</propstrike>
        <propstrike-force type="float">0</propstrike-force>
      </engine>
      <engine n="1">
        <propstrike type="bool">false</propstrike>
        <propstrike-force type="float">0</propstrike-force>
      </engine>
    </engines>
    <flaps type="bool">false</flaps>
    <left-wing-torn type="bool">false</left-wing-torn>
    <right-wing-torn type="bool">false</right-wing-torn>
    <gear>
      <gear n="0">
        <jammed type="bool">false</jammed>
      </gear>
      <gear n="1">
        <jammed type="bool">false</jammed>
      </gear>
      <gear n="2">
        <jammed type="bool">false</jammed>
      </gear>
    </gear>
      <fail-type type= "int">0</fail-type>
  </failure-manager>

    <flight-model>yasim</flight-model>

    <help>
      <key>
        <name>Shift+D</name>
        <desc>toggle Radiator Shutter</desc>
      </key>
      <key>
        <name>q/Q</name>
        <desc>Master Arm on/off</desc>
      </key>
      <key>
        <name>E</name>
        <desc>Fire machine guns</desc>
      </key>
      <key>
        <name>Shift+F</name>
        <desc>toggle cockpit door</desc>
      </key>
      <key>
        <name>Ctrl+L</name>
        <desc>toggle Tailwheel lock</desc>
      </key>
      <text>
      ---Take off---
      Open Radiator shutters and use Flaps 1 step down on short fields. Lift Tailwheel early and take off at 120 knots. 
      Close Radiator shutters in level flight.

      ---Landing---
      Approach at 145 knots with Flaps down. Treshold speed is about 110 knots. </text>
    </help>

    <hud>
      <enable3d>false</enable3d>
    </hud>

    <menubar>
      <default>
	<menu n="10">
	  <label>Mosquito</label>
	  <enabled type="bool">true</enabled>     
	  <item>
	    <label>Configuration</label>
	    <binding>
	      <command>nasal</command>
	      <script>mosquito.config.open()</script>
	    </binding>
	  </item>
	</menu>
      </default>
    </menubar>


    <rating>
      <FDM type="int">3</FDM>
      <systems type="int">3</systems>
      <cockpit type="int">3</cockpit>
      <model type="int">3</model>
    </rating>

    <sound>
      <path>mosquito-sound.xml</path>
    </sound>

    <submodels> 
      <serviceable type="bool">true</serviceable>
      <path>Models/submodels.xml</path>
    </submodels>

    <view n="1"> 
      <config> 
        <target-z-offset-m archive="y" type="double">3.4</target-z-offset-m>
      </config>
    </view>

    <view n="2"> 
      <config> 
        <target-z-offset-m archive="y" type="double">3.4</target-z-offset-m>
      </config>
    </view>

    <view n="3"> 
      <config> 
        <target-z-offset-m archive="y" type="double">3.4</target-z-offset-m>
      </config>
    </view>

    <view n="4"> 
      <config> 
        <target-z-offset-m archive="y" type="double">3.4</target-z-offset-m>
      </config>
    </view>

    <view n="5"> 
      <config> 
        <target-z-offset-m archive="y" type="double">3.4</target-z-offset-m>
      </config>
    </view>

    <view n="6"> 
      <config> 
        <target-z-offset-m archive="y" type="double">3.4</target-z-offset-m>
      </config>
    </view>

    <view n="100">
      <name>interior view</name>
      <type>lookfrom</type>
      <internal archive="y">true</internal>
      <config>
        <from-model type="bool">true</from-model>
        <from-model-idx type="int">0</from-model-idx>
        <ground-level-nearplane-m type="double">0.05f</ground-level-nearplane-m>
        <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
        <default-pitch-deg type="double">0</default-pitch-deg>
        <default-heading-deg type="double">0</default-heading-deg>
        <front-direction-deg type="double">0</front-direction-deg>
        <x-offset-m archive="y" type="double">0.2</x-offset-m>
        <y-offset-m archive="y" type="double">1.0</y-offset-m>
        <z-offset-m archive="y" type="double">2.7</z-offset-m>
        <pitch-offset-deg>3</pitch-offset-deg>
      </config>
    </view>

    <virtual-cockpit archive="y">true</virtual-cockpit>
  </sim>

</PropertyList>
