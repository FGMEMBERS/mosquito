<?xml version="1.0"?>

<PropertyList>
	
	<path>rocketarrayR.ac</path>
		
		<!-- rockets left
		0 = not selected
		1 = selected but dropped/gone
		2 = 1 explosive Rocket
		3 = 2 explosive Rockets
		4 = 3 explosive Rockets
		5 = 4 explosive Rockets
		6 = 1 AP Rocket
		7 = 2 AP Rockets
		8 = 3 AP Rockets
		9 = 4 AP Rockets
		
		-->

		<animation>
				<type>select</type>
				<object-name>rppylons</object-name>
				<object-name>rpcarriers</object-name>
				<object-name>rpracks</object-name>
				<condition>
						<greater-than>
								<property>sim/armament/rocketR/type</property>
								<value>0</value>
						</greater-than>
				</condition>
		</animation>
		<!-- hide inner rocket rails when tank is selected -->
		<animation>
				<type>select</type>
				<object-name>rppylons1</object-name>
				<object-name>rpcarriers1</object-name>
				<object-name>rpracks1</object-name>
				<condition>
					<and>
						<greater-than>
								<property>sim/armament/rocketR/type</property>
								<value>0</value>
						</greater-than>
						<equals>
								<property>sim/armament/tankR/type</property>
								<value>0</value>
						</equals>
						<equals>
								<property>sim/armament/bombR/type</property>
								<value>0</value>
						</equals>
					</and>
				</condition>
		</animation>
		<!-- rockets normal rack -->
		<animation>
				<type>select</type>
				<object-name>rockets4</object-name>
				<object-name>rpclips.U1</object-name>
				<object-name>rpclips.U2</object-name>
				<object-name>rpclips.U3</object-name>
				<object-name>rpclips.U4</object-name>
				<condition>
					<and>
						<equals>
								<property>sim/armament/rocketR/type</property>
								<value>5</value>
						</equals>
						<equals>
								<property>sim/armament/tankR/type</property>
								<value>0</value>
						</equals>
						<equals>
								<property>sim/armament/bombR/type</property>
								<value>0</value>
						</equals>
					</and>
				</condition>
		</animation>
		<animation>
				<type>select</type>
				<object-name>rockets3</object-name>
				<object-name>rpclips.U2</object-name>
				<object-name>rpclips.U3</object-name>
				<object-name>rpclips.U4</object-name>
				<condition>
					<and>
						<equals>
								<property>sim/armament/rocketR/type</property>
								<value>4</value>
						</equals>
						<equals>
								<property>sim/armament/tankR/type</property>
								<value>0</value>
						</equals>
						<equals>
								<property>sim/armament/bombR/type</property>
								<value>0</value>
						</equals>
					</and>
				</condition>
		</animation>
		<animation>
				<type>select</type>
				<object-name>rockets2</object-name>
				<object-name>rpclips.U3</object-name>
				<object-name>rpclips.U4</object-name>
				<condition>
					<and>
						<equals>
								<property>sim/armament/rocketR/type</property>
								<value>3</value>
						</equals>
						<equals>
								<property>sim/armament/tankR/type</property>
								<value>0</value>
						</equals>
						<equals>
								<property>sim/armament/bombR/type</property>
								<value>0</value>
						</equals>
					</and>
				</condition>
		</animation>
		<animation>
				<type>select</type>
				<object-name>rockets1</object-name>
				<object-name>rpclips.U4</object-name>
				<condition>
					<and>
						<equals>
								<property>sim/armament/rocketR/type</property>
								<value>2</value>
						</equals>
						<equals>
								<property>sim/armament/tankR/type</property>
								<value>0</value>
						</equals>
						<equals>
								<property>sim/armament/bombR/type</property>
								<value>0</value>
						</equals>
					</and>
				</condition>
		</animation>
		<!-- tiered rack -->
				<animation>
				<type>select</type>
				<object-name>rocketsT4</object-name>
				<object-name>rpclips.U1</object-name>
				<object-name>rpclips.U2</object-name>
				<object-name>rpclips.D1</object-name>
				<object-name>rpclips.D2</object-name>
				<condition>
					<and>
						<equals>
								<property>sim/armament/rocketR/type</property>
								<value>5</value>
						</equals>
						<or>
								<greater-than>
										<property>sim/armament/tankR/type</property>
										<value>0</value>
								</greater-than>
								<greater-than>
										<property>sim/armament/bombR/type</property>
										<value>0</value>
								</greater-than>
							</or>
					</and>
				</condition>
		</animation>
				<animation>
				<type>select</type>
				<object-name>rocketsT3</object-name>
				<object-name>rpclips.U1</object-name>
				<object-name>rpclips.U2</object-name>
				<object-name>rpclips.D2</object-name>
				<condition>
					<and>
						<equals>
								<property>sim/armament/rocketR/type</property>
								<value>4</value>
						</equals>
						<or>
								<greater-than>
										<property>sim/armament/tankR/type</property>
										<value>0</value>
								</greater-than>
								<greater-than>
										<property>sim/armament/bombR/type</property>
										<value>0</value>
								</greater-than>
							</or>
					</and>
				</condition>
		</animation>
				<animation>
				<type>select</type>
				<object-name>rocketsT2</object-name>
				<object-name>rpclips.U1</object-name>
				<object-name>rpclips.U2</object-name>
				<condition>
					<and>
						<equals>
								<property>sim/armament/rocketR/type</property>
								<value>3</value>
						</equals>
						<or>
								<greater-than>
										<property>sim/armament/tankR/type</property>
										<value>0</value>
								</greater-than>
								<greater-than>
										<property>sim/armament/bombR/type</property>
										<value>0</value>
								</greater-than>
					</or>
					</and>
				</condition>
		</animation>
				<animation>
				<type>select</type>
				<object-name>rocketsT1</object-name>
				<object-name>rpclips.U2</object-name>
				<condition>
					<and>
						<equals>
								<property>sim/armament/rocketR/type</property>
								<value>2</value>
						</equals>
						<or>
								<greater-than>
										<property>sim/armament/tankR/type</property>
										<value>0</value>
								</greater-than>
								<greater-than>
										<property>sim/armament/bombR/type</property>
										<value>0</value>
								</greater-than>
							</or>
					</and>
				</condition>
		</animation>

</PropertyList>
