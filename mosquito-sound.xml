      <position>
        <x>-2.48</x>
      </position>
    </engine-4>
    <engine-0> 
      <name>engine shut down rpm</name>
      <path>Sounds/merlin_shutdown.wav</path>
      <condition> 
        <property>engines/engine/running</property>
