<PropertyList>

  <path>FBcockpit.ac</path>

  <model>
    <path>Models/Instruments/gunsight-mk2/gunsight-mk2.xml</path>
    <offsets> 
      <x-m>1.6</x-m>
      <y-m>-0.18</y-m>
      <z-m>0.77</z-m>
    </offsets>
  </model>

  <animation>
    <type>pick</type>
    <object-name>seatup.R</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>controls/doors/navseat</property>
      </binding>
    </action>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>seatup.R</object-name>
    <property>controls/doors/navseat</property>
    <factor>60</factor>
    <center>
      <x-m>2.8699</x-m>
      <y-m>0.20</y-m>
      <z-m>0.49388</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
  </animation>  

  <animation>
    <type>rotate</type>
    <object-name>door.inside</object-name>
    <object-name>door.1</object-name>
    <object-name>doorhandle</object-name>
    <object-name>emergrel</object-name>
    <property>/controls/doors/door/position-norm</property>
    <interpolation>
      <entry>
        <ind>0.0</ind>
        <dep>0.0</dep>
      </entry>
      <entry>
        <ind>0.3</ind>
        <dep>10</dep>
      </entry>
      <entry>
        <ind>1.00</ind>
        <dep>100.0</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>1.5176</x-m>
      <y-m>0.6262</y-m>
      <z-m>0.1997</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>doorhandle</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>mosquito.door.toggle();</script>
      </binding>
    </action>
  </animation>   

</PropertyList>
