<PropertyList include="mosquito-common.xml">
  <sim>
    <description>de Havilland Mosquito FB Mk VI</description>
    <flight-model>yasim</flight-model>
    <aero>mosquitofb6-yasim</aero>
    <variant-of>mosquito</variant-of>
    <model>
      <path>Models/Mosquito-FB6.xml</path>
      <crew>
        <pilot>
          <visible type="double">1</visible>
        </pilot>
      </crew>
      <livery>
   	<file/>
	<letter_color>
	  <diffuse>
	    <red>1.0</red>
	    <green>1.0</green>
	    <blue>1.0</blue>
	  </diffuse>
	  <ambient>
	    <red>1.0</red>
	    <green>1.0</green>
	    <blue>1.0</blue>
	  </ambient>
	  <specular>
	    <red>1.0</red>
	    <green>1.0</green>
	    <blue>1.0</blue>
	  </specular>
	  <emission>
	    <red>0.0</red>
	    <green>0.0</green>
	    <blue>0.0</blue>
	  </emission>
	  <transparency>
	    <alpha>1.0</alpha>
	  </transparency>
	  <shininess>1</shininess>
	</letter_color>

	<prophub_color>
	  <diffuse>
	    <red>0.4</red>
	    <green>0.0</green>
	    <blue>0.0</blue>
	  </diffuse>
	  <ambient>
	    <red>0.4</red>
	    <green>0.0</green>
	    <blue>0.0</blue>
	  </ambient>
	  <specular>
	    <red>0.4</red>
	    <green>0.0</green>
	    <blue>0.0</blue>
	  </specular>
	  <emission>
	    <red>0.0</red>
	    <green>0.0</green>
	    <blue>0.0</blue>
	  </emission>
	  <transparency>
	    <alpha>1.0</alpha>
	  </transparency>
	  <shininess>2</shininess>
	</prophub_color>
      </livery>
      <logo>
	<display type="int">2</display>
	<name>FlightGear</name>
	<texture>Aircraft/Generic/Logos/FlightGear.png</texture>
      </logo>
    </model>

    <view n="0">
      <internal archive="y">true</internal>
      <config>
        <x-offset-m archive="y" type="double">-0.18</x-offset-m>
        <y-offset-m archive="y" type="double">0.83</y-offset-m>
        <z-offset-m archive="y" type="double">2.2</z-offset-m>
        <pitch-offset-deg>-17.5</pitch-offset-deg>
      </config>
    </view>

  </sim>
</PropertyList>
