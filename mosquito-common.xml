  <input>
    <keyboard>
      <key n="100">
        <name>d</name>
        <desc>Toggle bomb bay doors</desc>
        <binding>
          <command>nasal</command>
          <script>mosquito.bombbaydoor.toggle();</script>
        </binding>
      </key>
      
      <key n="108"> 
        <name>l</name>
        <desc>Toggle Tailwheel Lock.</desc>
        <binding> 
          <command>property-toggle</command>
          <property>controls/gear/tailwheel-lock</property>
        </binding>
      </key>

      <key n="70">
        <name>F</name>
        <desc>Open Radiator Shutter</desc>
        <binding>
          <command>property-interpolate</command>
          <property>controls/engines/engine[0]/cowl-flaps-norm</property>
          <value>1</value>
          <time>2</time>
        </binding>
        <binding>
          <command>property-assign</command>
          <property>controls/engines/engine[1]/cowl-flaps-norm</property>
          <value>1</value>
          <time>2</time>
        </binding>
      </key>

      <key n="102">
        <name>f</name>
        <desc>Close Radiator Shutter</desc>
        <binding>
          <command>property-interpolate</command>
          <property>controls/engines/engine[0]/cowl-flaps-norm</property>
          <value>0</value>
          <time>2</time>
        </binding>
        <binding>
          <command>property-assign</command>
          <property>controls/engines/engine[1]/cowl-flaps-norm</property>
          <value>0</value>
          <time>2</time>
        </binding>
      </key>

      <key n="113"> 
        <name>q</name>
        <desc>Toggle Master Arm on</desc>
        <binding> 
          <command>property-adjust</command>
          <property>/controls/armament/master-arm</property>
          <step type="double">1</step>
          <min type="double">0</min>
          <max type="double">1</max>
        </binding>
      </key>
      <key n="81"> 
        <name>Q</name>
        <desc>Toggle Master Arm off</desc>
        <binding> 
          <command>property-adjust</command>
          <property>/controls/armament/master-arm</property>
          <step type="double">-1</step>
          <min type="double">0</min>
          <max type="double">1</max>
        </binding>
      </key>  

      <key n="69">
        <name>E</name>
        <desc>Fire cannon</desc>
        <binding>
          <command>property-toggle</command>
          <property>controls/armament/trigger1</property>
        </binding>
        <mod-up>
          <binding>
            <command>property-toggle</command>
            <property>controls/armament/trigger1</property>
          </binding>
        </mod-up>
      </key>
      <key n="101">
        <name>e</name>
        <desc>Fire machine guns</desc>
        <binding>
          <command>property-toggle</command>
          <property>controls/armament/trigger</property>
        </binding>
        <mod-up>
          <binding>
            <command>property-toggle</command>
            <property>controls/armament/trigger</property>
          </binding>
        </mod-up>
      </key>
    </keyboard>
